@using System.Globalization
@using Project.Service.Interface
@using Project.Service
@using System.Security.Claims

@inject IReviewService reviewService
@model PagedResult<Project.ViewModel.ProductDTO>
@{
    ViewData["Title"] = "ProductHome";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="page_banner">
    <div class="page_title" style="text-align:center">
        <h1>Danh sách sản phẩm tìm kiếm</h1>
    </div>
</div>
<div class="container">
    @*<div class="title">
    <h2>Product Trending</h2>
    </div>*@

    <div class="row justify-content-between">
        <!-- <div class="left_popular col-lg-4 col-12">
          <img src="~/user/images/model/model1.png" alt="">
        </div> -->
        <div class="col-lg-12">
            <div class="row">
                @foreach (var item in Model.Data)
                {
                    <div class="glass col-lg-3 col-6 p-1 mb-3">
                        <div class="banner-item">
                            <div class="banner-img img-zoom-effect">

                                <img src="~/img/@item.Thumb" class="img-full" alt="" width="290" height="300px">


                                @if (item.Category.Discount.StartDate < DateTime.Now && item.Category.Discount.EndDate > DateTime.Now && item.Category.Discount.DiscountPrice != 0)
                                {
                                    <div class="inner-content" style="top:10%;background-color:red">
                                        <span class="offer" style="color:white">-@(item.Category.Discount.DiscountPrice)%</span>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="glass_name" style="text-align:center">
                                <a asp-action="Index" asp-controller="Product" asp-route-id="@item.Id">@item.ProductName</a>

                            </div>
                        <div class="text-center">
                            @if (item.Category.Discount.StartDate < DateTime.Now && item.Category.Discount.EndDate > DateTime.Now && item.Category.Discount.DiscountPrice != 0)
                            {
                                <span class="price">
                                    <del style="font-size:15px; margin-right:7px;">@item.Price.ToString("N00", new CultureInfo("en-us")) VNĐ</del>
                                </span>
                                <span style="color: #000; font-size: 20px; font-weight: 700;">
                                    @((Decimal.ToDouble(item.Price) - Decimal.ToDouble(item.Price) * (item.Category.Discount.DiscountPrice / 100)).ToString("N00", new CultureInfo("en-us"))) VNĐ
                                </span>

                            }
                            else
                            {
                                <span class="price" style="font-size: 20px; color: #000; font-weight: 700;">@item.Price.ToString("N00", new CultureInfo("en-us")) VNĐ</span>
                            }
                        </div>
                        <div class="text-center">
                                <a class="btn btn-primary" data-id="@item.Id">Thêm vào <i class="fa fa-shopping-cart"></i></a>

                                </div>

                    </div>

                }


            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    @if (Model.TotalItem > 0 && Model.TotalPages > 1)
    {
        <ul class="pagination justify-content-center">
            @if (Model.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="Product" asp-route-pageNumber="1">Fisrt</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="Product" asp-route-pageNumber="@(Model.PageNumber-1)">Previous</a>
                </li>
            }

            @for (var j = Model.StartPage; j <= Model.EndPage; j++)
            {
                <li class="page-item @(j==Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-controller="Home" asp-action="Product" asp-route-pageNumber="@j">@j</a>
                </li>
            }

            @if (Model.PageNumber < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="Product" asp-route-pageNumber="@(Model.PageNumber+1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="Product" asp-route-pageNumber="@Model.TotalPages">Last</a>
                </li>
            }
        </ul>
    }
</div>
