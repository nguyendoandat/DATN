@{
    ViewData["Title"] = "Chỉnh sửa thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var mess = TempData["Message"] as string;
}
@model Project.web.Controllers.UserRequest



<div class="row">
    <div class="col-lg-3 order-lg-1 order-2 pt-10 pt-lg-0" style="background:#DDDDDD">
        <div>
            <div class="p-2">
                <span class="round">
                    <img src="https://i.imgur.com/cAdLHeY.jpg" alt="user"
                         width="50">
                </span>
            </div>
            <p class="AccountTitle titleSidebar">Xin chào <strong>@Model.UserName</strong></p>
            <div >
                <div >
                    <ul class="list-unstyled">
                        <li class="nav-item">
                            <form id="logoutForm" class="form-inline" asp-controller="MyProfile" asp-action="Index" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button id="logout" type="submit" class="nav-link btn btn-link text-dark"><i class="fa fa-user-circle-o"></i>Thông tin tài khoản</button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <form id="logoutForm" class="form-inline">
                                <button id="logout" type="submit" class="nav-link btn btn-link text-dark"><i class="fa fa-list-alt"></i>Quản lý đơn hàng</button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button id="logout" type="submit" class="nav-link btn btn-link text-dark"><i class="fa fa-sign-out"></i>Đăng xuất</button>
                            </form>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-9 order-lg-2 order-1" id="customer_sidebar">
        <h2>Thông tin tài khoản</h2>
        <p class="name_account"><span>Họ và tên: </span>@Model.UserName</p>
        <p class="email "><span>Email: </span>@Model.Email</p>
        
            <p><span>Địa chỉ: </span></p>
            <p><span>Ngày sinh: </span></p>

            <p><span>Điện thoại: </span></p>

            <div class="rank_wrap">
                <div class="rank_wrap_left">
                </div>
                <div class="rank_wrap_right">
                </div>
            </div>

       
        <div class="w-50 btn btn-lg btn-info">
            <a  id="update">Cập nhật thông tin tài khoản</a>
        </div>
        
    </div>
</div>
<div id="formupdate" class="container" style="display:none;">
    <div class="row justify-content-center">
        @*<div class="col-6">
        hehe
        </div>*@
        <div class="shadow col-6 p-5">

            <h3>Chỉnh sửa thông tin cá nhân</h3>
            @if (!String.IsNullOrEmpty(mess))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Thông báo!</strong> @mess
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form id="account" method="post" autocomplete="off" method="post" id="form-user" asp-action="ChangeProfile">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="UserName" type="text" class="form-control" id="floatingInputEmail"
                           placeholder="name@example.com">
                    <label for="floatingInputEmail">Tên tài khoản</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Email" type="text" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control" asp-for="Id">
                </div>
                <div class="d-grid">
                    <button class="w-100 btn btn-lg btn-success " type="submit" id="luu">Lưu thay đổi</button>
                </div>
                <br>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function(){
            $("#update").click(function(){ 
                $("#formupdate").show();
            })
            
        });
    </script>
}

