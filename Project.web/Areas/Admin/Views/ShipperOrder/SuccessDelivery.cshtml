@using Project.Service
@using Project.Service.Interface
@model PagedResult<Project.ViewModel.OrderDTO>
@{
    ViewData["Title"] = "SuccessDelivery";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách đơn hàng giao thành công</h6>
    </div>
    <div class="card-body">
       
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên khách hàng</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                      

                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Data != null && Model.Data.Any())
                    {
                        var i = 1;
                        foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>@i</td>

                                <td id="txtName">@item.ShipName</td>
                                <td id="txtEmail"> @item.ShipEmail</td>
                                <td id="txtAddress">@item.ShipAddress</td>
                                <td id="txtPhone">@item.ShipPhoneNumber</td>
                               


                                <td align="center">
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" asp-controller="Order"><i class="bi bi-pencil-square"></i>Chi tiết</a>

                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">Hiện không có đơn hàng nào giao thành công</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="container">
        @if (Model.TotalItem > 0 && Model.TotalPages > 1)
        {
            <ul class="pagination justify-content-center">
                @if (Model.PageNumber > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="ShipperOrder" asp-action="SuccessDelivery" asp-route-pageNumber="1">Fisrt</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="ShipperOrder" asp-action="SuccessDelivery" asp-route-pageNumber="@(Model.PageNumber-1)">Previous</a>
                    </li>
                }

                @for (var j = Model.StartPage; j <= Model.EndPage; j++)
                {
                    <li class="page-item @(j==Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-controller="ShipperOrder" asp-action="SuccessDelivery" asp-route-pageNumber="@j">@j</a>
                    </li>
                }

                @if (Model.PageNumber < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="ShipperOrder" asp-action="SuccessDelivery" asp-route-pageNumber="@(Model.PageNumber+1)">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="ShipperOrder" asp-action="SuccessDelivery" asp-route-pageNumber="@Model.TotalPages">Last</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>

