@using Project.Service
@using Project.Service.Interface
@model PagedResult<Project.ViewModel.OrderDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách đơn hàng</h6>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <a asp-action="Create" asp-controller="User" asp-area="Admin" class="btn btn-success mb-4">Danh sách đơn hàng đang giao</a>
            <a asp-action="Create" asp-controller="User" asp-area="Admin" class="btn btn-success mb-4">Danh sách đơn hàng đã giao thành công</a>

        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên khách hàng</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Trạng thái Đơn</th>
                     
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Data != null && Model.Data.Any())
                    {
                        var i = 1;
                        foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>@i</td>
                               
                                <td id="txtName">@item.ShipName</td>
                                <td id="txtEmail"> @item.ShipEmail</td>
                                <td id="txtAddress">@item.ShipAddress</td>
                                <td id="txtPhone">@item.ShipPhoneNumber</td>
                                <td>
                                    @if (item.StatusId == 3)
                                    {
                                        <a class="btn btn-primary mx-2" data-id="@item.Id" data-name="@item.ShipName" data-order="@item.OrderDate"
                               data-address="@item.ShipAddress" data-email="@item.ShipEmail" data-phone="@item.ShipPhoneNumber"><i class="bi bi-pencil-square"></i> Nhận đơn</a>
                                     
                                    }
                                    
                                </td>
                               

                                <td align="center">
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" asp-controller="Order"><i class="bi bi-pencil-square"></i>Chi tiết</a>

                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">Hiện không có đơn hàng nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="container">
        @if (Model.TotalItem > 0 && Model.TotalPages > 1)
        {
            <ul class="pagination justify-content-center">
                @if (Model.PageNumber > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageNumber="1">Fisrt</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber-1)">Previous</a>
                    </li>
                }

                @for (var j = Model.StartPage; j <= Model.EndPage; j++)
                {
                    <li class="page-item @(j==Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageNumber="@j">@j</a>
                    </li>
                }

                @if (Model.PageNumber < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber+1)">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageNumber="@Model.TotalPages">Last</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('tr .mx-2').click(function () {

                Swal.fire({
                    title: 'Thông bá0!',
                    text: "Bạn có thực sự muốn xét duyệt không!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Đồng Ý!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        debugger
                        var order = {
                            Id: $(this).data('id'),
                            OrderDate: $(this).data('order'),
                            ShipName: $(this).data('name'),
                            ShipAddress: $(this).data('address'),
                            ShipEmail: $(this).data('email'),
                            ShipPhoneNumber: $(this).data('phone'),
                            StatusId: 4
                        };
                        $.ajax({
                            type: "POST",
                            url: '@Url.Action("Edit", "ShipperOrder")',
                            data: { order: order },

                            success: function (response) {
                                if (response.result) {
                                    Swal.fire(
                                        'Update!',
                                        'Xác nhận thành công.',
                                        'success'
                                    )
                                    setTimeout(() => location.href = '@Url.Action("Index", "ShipperOrder", "Admin")', 2000)
                                }
                                else {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Oops...',
                                        text: "Có lỗi trong quá trình xử lý"
                                    })
                                }
                            }
                        })

                    }
                })
            })
        });
    </script>
}
