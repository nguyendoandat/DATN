@using Project.Service.Interface
@model Project.ViewModel.DiscountDTO
@inject ICategoryService CategoryService

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var list = new SelectList(CategoryService.GetCategory(), "Id", "CategoryName");
}

<h1>Thêm chương trình khuyến mại</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên chương trình giảm giá</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <font color="red">@ViewData["DiscountName"]</font>

            </div>
            <div class="form-group">
                <label asp-for="DiscountPrice" class="control-label">Giảm giá</label>
                <input asp-for="DiscountPrice" class="form-control" />
                <span asp-validation-for="DiscountPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Ngày bắt đầu</label>
                <input type="datetime-local" asp-for="StartDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">Ngày kết thúc</label>
                <input type="datetime-local" asp-for="EndDate" class="form-control" />
            </div>
            <div class="form-check">
                <input type="hidden" class="form-check-input" asp-for="CreateAt" value="@DateTime.Now">
            </div>
         
            <div class="form-group">
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

