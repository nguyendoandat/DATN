        if (r == true) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("Delete","User")',
                data: { id: id },
                error: function (result) { alert("error"); },
                success: function (result) {
                    if (result == true) {
                        var baseUrl = "/User";

                    }
                    else {
                        alert("There is a problem,Try later!");
                    }
                }

            });
        }
    }

</script>

