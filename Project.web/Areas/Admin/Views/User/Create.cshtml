@using Project.Service.Interface

@inject IRoleService _roleService;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var listRole = new SelectList(_roleService.GetAllRole(), "Name", "Name");
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">

                <label for="username">Tên tài khoản</label>
                <input type="text" class="form-control" name="UserName" id="UserName" aria-describedby="emailHelp" placeholder="Enter username">
                <span class="form-message"></span>

                <font color="red">@ViewData["UserName"]</font>

            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="Email" id="Email" aria-describedby="emailHelp" placeholder="Enter email">
                <span class="form-message"></span>
                <font color="red">@ViewData["Email"]</font>
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu</label>
                <input type="password" class="form-control" name="Password" id="Password" placeholder="Password">
                <span class="form-message"></span>
            </div>
            <div class="form-group">
                <label></label>
            </div>
            <div class="form-group">
                <label for="password">Quyền</label>
                @*<select class="form-control" id="RoleId" name="RoleId">
                <option value="2">User</option>
                <option value="2">Admin</option>
                </select>*@
                <select class="form-control" asp-items="listRole" id="RoleId" name="RoleId">
                </select>
                <span class="form-message"></span>
            </div>
            <div class="form-group">
                <input type="hidden" class="form-control" name="CreateAt" id="CreateAt" value="@DateTime.Now">
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

