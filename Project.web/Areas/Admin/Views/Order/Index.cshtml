@using Project.Service
@using Project.Service.Interface
@model PagedResult<Project.ViewModel.OrderDTO>

@*@inject IStatusService statusService
@inject IOrderService orderService*@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    //var list = orderService(includeProperties: "Status");
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách đơn hàng</h6>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <form class="d-flex justify-content-end">
               
                <input type="text" class="form-control w-35 mr-3" id="searchString" placeholder="Tìm kiếm theo CategoryName" >
                <input type="button" class="form-control w-30 btn btn-info" id="search" value="Filter">
            </form>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã đơn</th>
                        <th>Tên khách hàng</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Trạng thái Đơn</th>
                        <th>Ngày tạo</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Data != null && Model.Data.Any())
                    {
                        var i = 1;
                        foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>@i</td>
                                <td >@item.Id</td>
                                <td id="txtName">@item.ShipName</td>
                                <td id="txtEmail"> @item.ShipEmail</td>
                                <td id="txtAddress">@item.ShipAddress</td>
                                <td id="txtPhone">@item.ShipPhoneNumber</td>
                                <td>
                                    @if(item.StatusId==1){
                                        <a class="btn btn-primary mx-2" data-id="@item.Id" data-name="@item.ShipName" data-order="@item.OrderDate"
                               data-address="@item.ShipAddress" data-email="@item.ShipEmail" data-phone="@item.ShipPhoneNumber"><i class="bi bi-pencil-square"></i> @item.Status.Name</a>
                                        <a class="btn btn-primary mx-1" data-id="@item.Id" data-name="@item.ShipName" data-order="@item.OrderDate"
                               data-address="@item.ShipAddress" data-email="@item.ShipEmail" data-phone="@item.ShipPhoneNumber"><i class="bi bi-pencil-square"></i>Hủy đơn</a>
                                    }
                                    else{
                                        @item.Status.Name
                                    }
                                </td>
                                <td id="txtDate">@item.OrderDate.ToString("dd/MM/yyyy")</td>

                                <td align="center">
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" asp-controller="Order"><i class="bi bi-pencil-square"></i>Chi tiết</a>

                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">Hiện không có đơn hàng nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="container">
        @if (Model.TotalItem > 0 && Model.TotalPages > 1)
        {
            <ul class="pagination justify-content-center">
                @if (Model.PageNumber > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageNumber="1">Fisrt</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber-1)">Previous</a>
                    </li>
                }

                @for (var j = Model.StartPage; j <= Model.EndPage; j++)
                {
                    <li class="page-item @(j==Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageNumber="@j">@j</a>
                    </li>
                }

                @if (Model.PageNumber < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber+1)">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageNumber="@Model.TotalPages">Last</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>

